<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="productDetailContainer" prefHeight="768.0" prefWidth="866.0" styleClass="product-detail-container" stylesheets="@../../StyleSheets/ComponentStyleSheets/product_detail_component.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ComponentControllers.Controller_Product_Detail_Component">
    
    <!-- Contenido principal -->
    <VBox spacing="15.0" styleClass="detail-content" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        
        <!-- Contenedor de miniaturas e información -->
        <HBox alignment="TOP_CENTER" fillHeight="false" spacing="20.0" VBox.vgrow="ALWAYS">
         <VBox prefHeight="625.0" prefWidth="120.0" spacing="20.0">
            <children>
                 
                       <!-- Botón retroceso -->
                 <Button fx:id="backButton" prefHeight="50.0" prefWidth="131.0" styleClass="back-button-content" text="Volver">
                     <graphic>
                         <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                             <image>
                                 <Image url="@../../Images/Back.png" />
                             </image>
                         </ImageView>
                     </graphic>
                 </Button>
                  <!-- Panel izquierdo: Miniaturas -->
                  <VBox alignment="CENTER" prefHeight="554.0" spacing="10.0" styleClass="thumbnails-panel">
                      <padding>
                          <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                      </padding>
                      <VBox fx:id="thumbnailsContainer" alignment="CENTER" spacing="10.0" />
                  </VBox>
            </children>
         </VBox>
            
                  <!-- Panel central: Información del producto -->
            <VBox alignment="TOP_LEFT" prefHeight="621.0" prefWidth="646.0" spacing="15.0" styleClass="product-info-panel" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            
                  <!-- Título: Nombre - Marca -->
            <Label fx:id="productTitleLabel" styleClass="product-title" text="Nombre - Marca" />
            
                  <!-- Precio -->
            <Label fx:id="priceLabel" styleClass="product-price" text="COP $ 35,900" />
            
                  <!-- Imagen principal -->
            <StackPane alignment="CENTER" prefHeight="250.0" prefWidth="600.0" styleClass="main-image-container">
                <ImageView fx:id="mainImageView" fitHeight="250.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" styleClass="main-image" />
            </StackPane>
            
                  <!-- Descripción -->
            <VBox spacing="5.0" VBox.vgrow="NEVER">
                <Label styleClass="description-label" text="Descripción:" />
               <TextArea fx:id="descriptionTextArea" editable="false" focusTraversable="false" prefHeight="200.0" prefWidth="200.0" styleClass="description-text" text="x" wrapText="true" />
            </VBox>
            
                  <!-- Selector de talla y botón -->
            <HBox alignment="BOTTOM_LEFT" spacing="20.0">
                <VBox prefHeight="74.0" prefWidth="200.0" spacing="5.0">
                    <Label styleClass="size-label" text="Talla:" />
                    <ComboBox fx:id="sizeComboBox" prefHeight="44.0" prefWidth="190.0" promptText="Seleccione talla" styleClass="size-selector" />
                </VBox>
                <Button fx:id="addToCartButton" prefHeight="45.0" prefWidth="200.0" styleClass="add-to-cart-button" text="Agregar al carrito" />
            </HBox>
        </VBox>
        </HBox>
    </VBox>
</AnchorPane>
