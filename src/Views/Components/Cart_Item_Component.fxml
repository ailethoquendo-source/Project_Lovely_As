<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="cartItemContainer" prefHeight="120.0" prefWidth="600.0" styleClass="cart-item-container" stylesheets="@../../StyleSheets/Styles.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ComponentControllers.Controller_Cart_Item_Component">
    
    <VBox alignment="CENTER_LEFT" spacing="5.0" styleClass="cart-item-content" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <!-- Imagen del producto (pequeña) -->
            <ImageView fx:id="productImageView" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" styleClass="cart-item-image" />
            
            <!-- Información del producto -->
            <VBox alignment="CENTER_LEFT" spacing="5.0" HBox.hgrow="ALWAYS">
                <Label fx:id="brandLabel" styleClass="cart-item-label" text="MARCA" />
                <Label fx:id="sizeLabel" styleClass="cart-item-label" text="TALLA" />
                <Label fx:id="priceLabel" styleClass="cart-item-label" text="PRECIO" />
            </VBox>
            
            <!-- Botones de acción -->
            <VBox alignment="CENTER" prefHeight="80.0" prefWidth="171.0" spacing="5.0">
                <Button fx:id="moveToWishlistButton" prefHeight="37.0" prefWidth="175.0" styleClass="cart-item-button" text="Mover a Lista de Deseos" />
                <Button fx:id="removeButton" prefWidth="120.0" styleClass="cart-item-button-remove" text="ELIMINAR" />
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
